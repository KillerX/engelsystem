{% extends "layouts/app.twig" %}

{% block title %}{{ __('Credits') }}{% endblock %}

{% block content %}
    <div class="container">
        <h1>{{ __('Credits') }}</h1>
        <div class="row">
            {% for title, credit in credits %}
                <div class="col-md-4">
                    <h2>{{ __(title) }}</h2>
                    {{ __(credit)|markdown }}
                </div>
            {% endfor %}

            <div class="col-md-4">
                <h2>{{ __('Source code') }}</h2>
                <p>{{ __('Version: _%s_', [version])|markdown }}</i></p>
                <p>
                    {{ __('credits.credit')|markdown }}
                </p>
                <p>
                    {{ __('credits.contributors')|markdown }}
                </p>
            </div>
        </div>
    </div>
{% endblock %}
